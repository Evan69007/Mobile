<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddSpot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:visibility="visible"
    tools:context=".AddSpot"
    tools:visibility="visible">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="158dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="Add a new spot"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/abouttheapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="242dp"
            android:layout_height="27dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="104dp"
            android:text="Surf Break:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Surf_break"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Destination_State_Country" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="295dp"
            android:layout_height="24dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="51dp"
            android:text="Difficulty:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/difficulty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Surf_break" />

        <TextView

            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="46dp"
            android:text="Peak season start:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/peak_begin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/difficulty" />

        <TextView


            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="45dp"
            android:text="Peak season end:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/peak_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peak_begin" />


        <TextView


            android:id="@+id/textView7"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="46dp"
            android:text="Photo:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peak_end" />

        <Button
            android:id="@+id/Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="252dp"
            android:backgroundTint="#FFFFFFFF"
            android:text="Submit"
            android:textColor="#199FDC"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/url" />

        <TextView
            android:id="@+id/abouttheapp"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="229dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Spot name:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Destination"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/url"
            android:layout_width="326dp"
            android:layout_height="29dp"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="15dp"
            android:background="#FFFFFFFF"
            android:hint="Photo url"
            android:inputType="text|textUri"
            android:textColor="#000000"
            android:textColorHint="#199FDC"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="139dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="66dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="204dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Country/location:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Destination_State_Country"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Destination" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/peak_end"
            android:layout_width="326dp"
            android:layout_height="29dp"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="64dp"
            android:background="#FFFFFFFF"
            android:hint="Peak Surf Season Ends"
            android:inputType="datetime|date"
            android:textColor="#000000"
            android:textColorHint="#199FDC"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:visibility="visible" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/peak_begin"
            android:layout_width="326dp"
            android:layout_height="29dp"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="64dp"
            android:background="#FFFFFFFF"
            android:hint="Peak Surf Season Begins"
            android:inputType="datetime|date"
            android:textColor="#000000"
            android:textColorHint="#199FDC"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:visibility="visible" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/difficulty"
            android:layout_width="326dp"
            android:layout_height="29dp"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="64dp"
            android:background="#FFFFFFFF"
            android:hint="Difficulty Level"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#199FDC"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:visibility="visible" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Surf_break"
            android:layout_width="326dp"
            android:layout_height="29dp"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFFFF"
            android:hint="Type of break"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#199FDC"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:visibility="visible" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Destination_State_Country"
            android:layout_width="326dp"
            android:layout_height="29dp"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFFFF"
            android:hint="Destination State/Country"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#199FDC"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:visibility="visible" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Destination"
            android:layout_width="326dp"
            android:layout_height="29dp"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFFFF"
            android:hint="Destination"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#199FDC"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/abouttheapp"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
