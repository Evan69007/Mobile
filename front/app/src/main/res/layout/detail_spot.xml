<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:contentDescription="My image"
        android:gravity="center"
        android:src="@drawable/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/mylevel"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="55dp"
        android:contentDescription="My level"
        android:gravity="center"
        android:src="@drawable/level"
        app:layout_constraintEnd_toStartOf="@+id/mysurf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/myImageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/mysurf"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:contentDescription="My Surf"
        android:gravity="center"
        android:src="@drawable/surfing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="119dp"
        android:layout_height="124dp"
        android:layout_marginStart="50dp"

        android:layout_marginTop="4dp"
        android:layout_marginBottom="245dp"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myImageView"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/level"
        android:layout_width="53dp"
        android:layout_height="33dp"

        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="185dp"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Location"
        app:layout_constraintTop_toBottomOf="@+id/mylevel" />

    <TextView
        android:id="@+id/peak"
        android:layout_width="116dp"
        android:layout_height="150dp"

        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="13dp"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/mysurf" />

    <TextView
        android:id="@+id/spotName"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="10dp"
        android:capitalize="none"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="336dp"
        android:layout_height="235dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="95dp"
        android:layout_height="58dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/spotName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="text"
            android:imeOptions="actionDone"
            android:id="@+id/rating"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="17dp"
        android:text="edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>






